{
  "automerge": false,
  "branchConcurrentLimit": 2,
  "branchPrefix": "renovate-",
  "bumpVersion": "patch",
  "dependencyDashboard": true,
  "extends": ["config:base"],
  "rangeStrategy": "pin",
  "regexManagers": [
    {
      "fileMatch": ["^*.gemspec"],
      "matchStrings": [
        "^.*add.*dependency.*['\"](?<depName>.*?)['\"],.*['\"](?<currentValue>.*?)['\"].*"
      ],
      "depNameTemplate": "gemspec",
      "datasourceTemplate": "rubygems",
      "versioningTemplate": "ruby"
    }
  ]
}
